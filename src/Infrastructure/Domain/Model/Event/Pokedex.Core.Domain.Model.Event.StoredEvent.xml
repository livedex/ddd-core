<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity name="Pokedex\Core\Domain\Model\Event\StoredEvent" table="core_stored_event">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="eventClass" type="text" column="event_class" />
        <field name="eventBody" type="text" column="event_body" />
        <field name="occuredOn" type="datetime" column="occured_on" />

    </entity>
</doctrine-mapping>